@model Collection

@{
  ViewBag.Title = "New Collection";
}

<h2>Enter the page you want</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger" /></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MuseumId"></label>
        <div><span asp-validation-for="MuseumId" class="text-danger"></span></div>
        <select class="form-control" asp-for="MuseumId" asp-items="ViewBag.Museum">
            <option disabled selected value="">Chose museum</option>
        </select>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Add</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>

@section scripts {
  <partial name="IncludeValidation" />
}