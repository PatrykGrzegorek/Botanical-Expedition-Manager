@model Observation

@{
  ViewBag.Title = "New Observation";
}

<h2>New Observation</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <div><span asp-validation-for="Date" class="text-danger" /></div>
        <input asp-for="Date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ExpeditionId"></label>
        <div><span asp-validation-for="ExpeditionId" class="text-danger"></span></div>
        <select class="form-control" asp-for="ExpeditionId" asp-items="ViewBag.Expedition">
            <option disabled selected value="">Chose Expedition</option>
        </select>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Add</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>

@section scripts {
  <partial name="IncludeValidation" />
}