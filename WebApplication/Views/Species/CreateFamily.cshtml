@model Family

@{
  ViewBag.Title = "New Family";
}

<h2>New Family</h2>

<form asp-action="CreateFamily" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger" /></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="OrderId"></label>
        <div><span asp-validation-for="OrderId" class="text-danger"></span></div>
        <select class="form-control" asp-for="OrderId" asp-items="ViewBag.Order">
            <option disabled selected value="">Chose Order</option>
        </select>
    </div>
    <a asp-action="CreateOrder">Add new order</a>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Add</button>
        <a asp-action="CreateGenus" class="btn btn-secondary">Back</a>
    </div>
</form>

@section scripts {
  <partial name="IncludeValidation" />
}
