@model Class

@{
  ViewBag.Title = "New Class";
}

<h2>New Class</h2>

<form asp-action="CreateClass" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger" /></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DivisionId"></label>
        <div><span asp-validation-for="DivisionId" class="text-danger"></span></div>
        <select class="form-control" asp-for="DivisionId" asp-items="ViewBag.Division">
            <option disabled selected value="">Chose division</option>
        </select>
    </div>
    <a asp-action="CreateDivision">Add new division</a>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Add</button>
        <a asp-action="CreateOrder" class="btn btn-secondary">Back</a>
    </div>
</form>

@section scripts {
  <partial name="IncludeValidation" />
}
