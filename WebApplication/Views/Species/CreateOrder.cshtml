@model Order

@{
  ViewBag.Title = "New Order";
}

<h2>New Order</h2>

<form asp-action="CreateOrder" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger" /></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ClassId"></label>
        <div><span asp-validation-for="ClassId" class="text-danger"></span></div>
        <select class="form-control" asp-for="ClassId" asp-items="ViewBag.Clas">
            <option disabled selected value="">Chose class</option>
        </select>
    </div>
    <a asp-action="CreateClass">Add new class</a>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Add</button>
        <a asp-action="CreateFamily" class="btn btn-secondary">Back</a>
    </div>
</form>

@section scripts {
  <partial name="IncludeValidation" />
}
