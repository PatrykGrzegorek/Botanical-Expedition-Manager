@model Division

@{
  ViewBag.Title = "New Division";
}

<h2>New Division</h2>

<form asp-action="CreateDivision" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger" /></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="KingdomId"></label>
        <div><span asp-validation-for="KingdomId" class="text-danger"></span></div>
        <select class="form-control" asp-for="KingdomId" asp-items="ViewBag.Kingdom">
            <option disabled selected value="">Chose Kingdom</option>
        </select>
    </div>
    <a asp-action="CreateKingdom">Add new Kingdom</a>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Add</button>
        <a asp-action="CreateClass" class="btn btn-secondary">Back</a>
    </div>
</form>

@section scripts {
  <partial name="IncludeValidation" />
}


